<h1>ranx.us</h1>

<nav>
  {{#link-to "index"}}Home{{/link-to}}
  {{#link-to "users"}}Users{{/link-to}}
  {{#link-to "ladders"}}Ladders{{/link-to}}
</nav>

{{outlet}}

<form class="auth">
  {{#if auth.currentUser }}
    <p>Logged in as {{ auth.currentUser.email }}</p>
    <button {{ action "logout" }}>Log out</button>
  {{else}}
    <div class="email input">
      <label>Email</label>
      {{ input value=auth.email type="text" }}
    </div>
    <div class="password input">
      <label>Password</label>
      {{ input value=auth.password type="password" }}
    </div>
    <button {{ action "login" disabled="auth.isProcessing" }}>Log in</button>
    {{#if auth.error }}
      <div class="alert">{{ auth.error }}</div>
    {{/if}}
  {{/if}}
</form>
